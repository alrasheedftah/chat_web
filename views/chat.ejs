<%- include('parts/header') %>
<%- include('parts/navbar') %>



<div class="container">
    <div class="row">
        <input type="hidden" name="chatId" id="chatId" value="<%=chatId  %>">
    <div class="col col-12 col-md-3">
        <img src="/<%=friendData.image %>" width="50%" height="80%"><br>
        <a href="/profile/<%=friendData.id%>" ><%=friendData.username %></a>
    </div>
    <div class="col col-12 col-md-9 messages">
        <div id="messages-container">
            <% for(let message of messages){ %>
                <span><%=message.content %> </span>
            <% } %> 

        </div>
        <div class="message-form">
            <textarea id="message"></textarea>
            <button id="sendBtn">Send</button>
        </div>
    </div>
</div>
</div>




<%- include('parts/footer') %> 
<script src="/socket.io/socket.io.js"></script>
<script src="/js/Socket/init.js"></script>
<script src="/js/Socket/chat.js"></script>

